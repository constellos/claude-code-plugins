{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "Skill",
      "Task",
      "Read",
      "mcp__context7__*",
      "mcp__next-devtools__*",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(pwd:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(cut:*)",
      "Bash(tr:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Glob",
      "Bash(jq:*)",
      "Bash(bun test:*)",
      "Bash(bun run test:*)",
      "Bash(bun run lint:*)",
      "Bash(bun run typecheck:*)",
      "Bash(bun run build:*)",
      "Bash(bun tsc:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(bun:*)",
      "Bash(curl:*)",
      "Bash(pkill:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(rm:*)",
      "Bash(echo:*)",
      "Bash(bun run build:*)",
      "Bash(bun run start:*)",
      "Bash(bun run dev:*)"
    ],
    "deny": [
      "Bash(vim :*)",
      "Bash(nano :*)",
      "Bash(emacs :*)",
      "Bash(vi :*)",
      "Bash(touch :*)",
      "Bash(cat :*)",
      "Bash(tee :*)",
      "Bash(sed :*)",
      "Bash(awk :*)",
      "Bash(perl :*)",
      "Bash(ed :*)",
      "Bash(ex :*)",
      "Bash(patch :*)",
      "Bash(dd :*)"
    ],
    "ask": [
      "Bash(sh:*)",
      "Bash(printf:*)"
    ],
    "defaultMode": "plan"
  },
  "enabledMcpjsonServers": [
    "next-devtools"
  ],
  "disabledMcpjsonServers": [
    "chrome-devtools",
    "google-sheets",
    "playwright",
    "supabase",
    "vercel"
  ],
  "hooks": {
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PROJECT_DIR}/.claude/hooks/refresh-plugins.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "plugin-dev@claude-code-plugins": true,
    "github-context@constellos": true,
    "project-context@constellos": true
  },
  "extraKnownMarketplaces": {
    "constellos": {
      "source": {
        "source": "directory",
        "path": "${CLAUDE_PROJECT_DIR}/.claude-plugin"
      }
    },
    "claude-code-plugins": {
      "source": {
        "source": "github",
        "repo": "anthropics/claude-code"
      }
    }
  }
}
