{
  "outputStyle": "architect-delegator",
  "enabledMcpjsonServers": [
    "next-devtools"
  ],
  "disabledMcpjsonServers": [
    "chrome-devtools",
    "google-sheets",
    "playwright",
    "supabase",
    "vercel"
  ],
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",

      "Skill",
      "Task",

      "mcp__context7",
      "mcp__next-devtools",
      
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(pwd:*)",
      
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      
      "Bash(cut:*)",
      "Bash(tr:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",

      "Glob",

      "Bash(jq:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm exec test:*)",
      "Bash(pnpm vitest:*)",
      "Bash(pnpm exec vitest:*)",
      "Bash(pnpm eslint:*)",
      "Bash(pnpm exec eslint:*)",
      "Bash(pnpm tsx:*)",
      "Bash(pnpm exec tsx:*)",
      "Bash(pnpm tsc:*)",
      "Bash(pnpm exec tsc:*)"
    ],
    "deny": [
      "Bash(vim :*)",
      "Bash(nano :*)",
      "Bash(emacs :*)",
      "Bash(vi :*)",
      
      "Bash(touch :*)",
      "Bash(cat :*)",
      "Bash(tee :*)",
      
      "Bash(sed :*)",
      "Bash(awk :*)",
      "Bash(perl :*)",
      
      "Bash(ed :*)",
      "Bash(ex :*)",
      
      "Bash(patch :*)",
      "Bash(dd :*)",

      "Bash(npm publish:*)",
      "Bash(pnpm publish:*)"
    ],
    "ask": [
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(curl:*)",
      "Bash(pkill:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(rm:*)",
      "Bash(echo:*)",
      "Bash(sh:*)",
      "Bash(chmod:*)",
      "Bash(git:*)",

      "Bash(pnpm build:*)",
      "Bash(pnpm exec build:*)",
      "Bash(pnpm start:*)",
      "Bash(pnpm exec start:*)",
      "Bash(pnpm dev:*)",
      "Bash(pnpm exec dev:*)",

      "Bash(echo:*)",
      "Bash(printf:*)",

      "Edit(**/.claude/settings.json)",
      "Write(**/.claude/settings.json)",
      "Edit(**/CLAUDE.md)",
      "Write(**/CLAUDE.md)",
      "Edit(**/.claude/agents/**)",
      "Write(**/.claude/agents/**)",
      "Edit(**/.claude/skills/**)",
      "Write(**/.claude/skills/**)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
        ]
      }
    ],
    "SessionStart": [
    ],
    "Stop": [
      {
        "hooks": [
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/bin/cck.js\" hook \"$CLAUDE_PROJECT_DIR/.claude/hooks/test/subagent-start.ts\""
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/bin/cck.js\" hook \"$CLAUDE_PROJECT_DIR/.claude/hooks/test/subagent-stop.ts\""
          }
        ]
      }
    ], 
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/bin/cck.js\" hook \"$CLAUDE_PROJECT_DIR/.claude/hooks/test/pre-tool-use.ts\""
          }
        ]
      },
      {
        "matcher": "mcp__*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/bin/cck.js\" hook \"$CLAUDE_PROJECT_DIR/.claude/hooks/test/pre-tool-use-mcp.ts\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Skill",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR/bin/cck.js\" hook \"$CLAUDE_PROJECT_DIR/.claude/hooks/test/post-tool-use-skill.ts\""
          }
        ]
      }
    ]
  }
}