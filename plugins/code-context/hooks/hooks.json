{
  "_comment": "Code Context Plugin - Code structure mapping and navigation",
  "SubagentStart": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "npx tsx ${CLAUDE_PROJECT_DIR}/shared/hooks/log-subagent-start.ts"
        }
      ]
    }
  ],
  "SubagentStop": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "npx tsx ${CLAUDE_PROJECT_DIR}/shared/hooks/log-subagent-stop.ts"
        }
      ]
    }
  ],
  "PreToolUse": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "npx tsx ${CLAUDE_PROJECT_DIR}/shared/hooks/validate-rules-file.ts",
          "matcher": "Write|Edit"
        },
        {
          "type": "command",
          "command": "npx tsx ${CLAUDE_PROJECT_DIR}/shared/hooks/enforce-markdown-rules.ts",
          "matcher": "Write|Edit"
        }
      ]
    }
  ],
  "PostToolUse": [
    {
      "matcher": "Read",
      "hooks": [
        {
          "type": "command",
          "command": "npx tsx ${CLAUDE_PLUGIN_ROOT}/hooks/add-folder-context.ts"
        }
      ]
    }
  ],
  "_notes": [
    "Rule hooks are shared from ${CLAUDE_PROJECT_DIR}/shared/hooks/"
  ],
  "_planned_features": [
    "Generate code structure maps on SessionStart",
    "Update maps when files are modified (PostToolUse)",
    "Create navigation indexes for large codebases",
    "Export architecture diagrams",
    "Track code dependencies and relationships"
  ]
}
