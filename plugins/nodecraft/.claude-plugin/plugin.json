{
  "name": "nodecraft",
  "version": "0.1.0",
  "description": "Task queue and agent workflow orchestration with MCP integration",
  "mcpServers": {
    "constellos-mcp": {
      "command": "npx",
      "args": ["-y", "constellos-mcp@latest"],
      "env": {
        "SUPABASE_URL": "${SUPABASE_URL}",
        "SUPABASE_SECRET_KEY": "${SUPABASE_SECRET_KEY}"
      }
    },
    "nodes-md": {
      "command": "npx",
      "args": ["-y", "nodes-md-mcp@latest"],
      "env": {}
    }
  },
  "agents": {
    "reviewer": "${CLAUDE_PLUGIN_ROOT}/agents/reviewer.ts",
    "planner": "${CLAUDE_PLUGIN_ROOT}/agents/planner.ts"
  },
  "rules": [
    "${CLAUDE_PLUGIN_ROOT}/rules/task-structure.md",
    "${CLAUDE_PLUGIN_ROOT}/rules/mcp-sync.md"
  ]
}
