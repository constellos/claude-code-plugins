{
  "description": "Nodecraft plugin hooks for task queue and agent workflow orchestration",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ${CLAUDE_PLUGIN_ROOT}/hooks/session-start.ts",
            "description": "Initialize task queue connection and display pending tasks"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ${CLAUDE_PLUGIN_ROOT}/hooks/post-tool-use.ts",
            "description": "Capture agent results and update task memory"
          }
        ]
      }
    ]
  }
}
