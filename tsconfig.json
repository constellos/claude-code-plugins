{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": [
    "lib/**/*.ts",
    "hooks/**/*.ts",
    "runner.ts"
  ],
  "exclude": [
    "node_modules",
    "src",
    "dist",
    "bin"
  ]
}
