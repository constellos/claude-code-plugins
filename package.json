{
  "name": "@constellos/claude-code-kit",
  "version": "0.1.8",
  "description": "TypeScript toolkit for Claude Code development â€” tool-integrated hook types with a runner plus a types generator for MCP tools and subagent state saving",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json",
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./types/hooks": {
      "types": "./dist/types/hooks/index.d.ts",
      "import": "./dist/types/hooks/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./transcripts": {
      "types": "./dist/transcripts/index.d.ts",
      "import": "./dist/transcripts/index.js"
    },
    "./runners": {
      "types": "./dist/runners/index.d.ts",
      "import": "./dist/runners/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "import": "./dist/mcp/index.js"
    },
    "./format": {
      "types": "./dist/format/index.d.ts",
      "import": "./dist/format/index.js"
    }
  },
  "bin": {
    "cck": "bin/cck.js",
    "claude-code-kit": "bin/cck.js",
    "cck-hook": "bin/cck-hook.js",
    "cck-sync-mcp": "bin/cck-sync-mcp.js"
  },
  "files": [
    "dist",
    "bin",
    "!**/*.test.ts",
    "!**/__tests__/**"
  ],
  "scripts": {
    "build": "bun run build.ts && tsc -p tsconfig.build.json",
    "dev": "bun --watch run build.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . && ([ -d .claude ] && find .claude -name '*.ts' | grep -q . && eslint .claude || true)",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "check:exports": "publint",
    "check:types": "attw --pack .",
    "prepublishOnly": "bun run lint && bun run typecheck && bun test && bun run build && bun run check:exports && bun run check:types"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "minimatch": "^10.0.1",
    "zod": "^3.23.0"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "@modelcontextprotocol/sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.0",
    "@eslint/js": "^9.16.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "eslint": "^9.16.0",
    "globals": "^15.14.0",
    "publint": "^0.3.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.17.0"
  },
  "optionalDependencies": {
    "gray-matter": "^4.0.3",
    "minimatch": "^10.0.1"
  },
  "claudeCodeCompat": {
    "min": "1.0.30",
    "tested": "1.0.35"
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "hooks",
    "typescript",
    "mcp",
    "model-context-protocol",
    "ai",
    "llm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/constellos/claude-code-kit.git"
  },
  "author": "constellos",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
